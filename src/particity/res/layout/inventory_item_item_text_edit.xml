<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/inventory_item_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ReportCardPropertyTitle" />

    <EditText
        android:id="@+id/inventory_item_text_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/report_card_padding_item_left"
        style="@style/ReportCardPropertyValue"/>

</LinearLayout>
