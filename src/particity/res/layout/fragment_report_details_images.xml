<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:f="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/report_card_padding_item_left">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/report_card_padding_y">

            <TextView
                style="@style/ReportCardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/report_card_padding_x"
                android:layout_marginRight="@dimen/report_card_padding_x"
                android:layout_marginTop="@dimen/report_card_padding_y"
                android:text="@string/image_title" />

            <com.lfdb.zuptecnico.ui.FlowLayout
                android:id="@+id/imageContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/report_card_padding_y"
                android:paddingLeft="@dimen/report_card_padding_x"
                android:paddingRight="@dimen/report_card_padding_x"
                f:horizontalSpacing="@dimen/report_list_item_padding"
                f:verticalSpacing="@dimen/report_list_item_padding" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>