<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/report_card_padding_item_left"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        style="@style/ReportCard"
        android:layout_marginTop="@dimen/report_card_padding_item_left"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/related_reports_title"
          style="@style/ReportCardTitle"
          />

      <com.particity.zuptecnico.ui.ExpandExpandableListView
          android:id="@+id/related_reports"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/report_list_item_padding"
          />
    </LinearLayout>
  </android.support.v7.widget.CardView>
</FrameLayout>