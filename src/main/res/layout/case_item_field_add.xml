<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/inventory_item_text_name"
        style="@style/ReportCardPropertyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.particity.zuptecnico.ui.ScrollLessListView
        android:id="@+id/report_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/report_card_padding_y"
        android:orientation="vertical"
        android:paddingLeft="@dimen/report_card_padding_item_left"
        android:paddingRight="@dimen/activity_vertical_margin" />

    <TextView
        android:id="@+id/button_add_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_map_warning"
        android:paddingLeft="@dimen/report_card_padding_item_left"
        android:paddingRight="@dimen/report_card_padding_item_left"
        android:paddingTop="@dimen/report_card_padding_item_left"
        android:text="@string/add_reports_title"
        android:textColor="@color/sidebar_selected"
        android:textSize="@dimen/activity_vertical_margin" />

    <CheckBox
        android:id="@+id/new_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:layout_marginTop="@dimen/report_card_padding_y"
        android:text="@string/text_new_inventory_item" />
</LinearLayout>