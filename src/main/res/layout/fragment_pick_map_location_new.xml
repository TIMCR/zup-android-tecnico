<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/editscreen_button"
    android:orientation="vertical"
    >

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/textview_empty"
      android:focusable="true"
      android:focusableInTouchMode="true"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/report_card_padding_y"
      android:orientation="vertical"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

      <LinearLayout
          android:layout_width="@dimen/textview_empty"
          android:layout_height="match_parent"
          android:layout_weight="7"
          android:orientation="vertical"
          android:paddingRight="@dimen/report_card_padding_x"
          >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/inventory_padding"
            android:text="@string/address_title"
            android:textColor="@color/field_label_color"
            android:textSize="@dimen/report_list_item_title"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

          <AutoCompleteTextView
              android:id="@+id/address_street"
              android:layout_width="match_parent"
              android:layout_height="@dimen/tabhost_height"
              android:lines="1"
              android:textColor="@color/pick_map_location_text"
              android:textSize="@dimen/activity_vertical_margin"
              />

          <ProgressBar
              android:id="@+id/address_street_progress"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/report_card_padding_item_left"
              android:layout_marginTop="@dimen/report_card_padding_item_left"
              android:indeterminate="true"
              style="?android:attr/progressBarStyleSmall"
              />

        </RelativeLayout>

      </LinearLayout>

      <LinearLayout
          android:layout_width="@dimen/textview_empty"
          android:layout_height="match_parent"
          android:layout_weight="3"
          android:orientation="vertical"
          >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/inventory_padding"
            android:text="@string/number_title"
            android:textColor="@color/field_label_color"
            android:textSize="@dimen/report_list_item_title"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

          <EditText
              android:id="@+id/address_number"
              android:layout_width="match_parent"
              android:layout_height="@dimen/tabhost_height"
              android:inputType="number"
              android:lines="1"
              android:maxLines="1"
              android:textColor="@color/pick_map_location_text"
              android:textSize="@dimen/activity_vertical_margin"
              />

          <ProgressBar
              android:id="@+id/address_number_progress"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/report_card_padding_item_left"
              android:layout_marginTop="@dimen/report_card_padding_item_left"
              android:indeterminate="true"
              style="?android:attr/progressBarStyleSmall"
              />
        </RelativeLayout>
      </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

      <LinearLayout
          android:layout_width="@dimen/textview_empty"
          android:layout_height="match_parent"
          android:layout_weight="7"
          android:orientation="vertical"
          android:paddingRight="@dimen/report_card_padding_x"
          >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/inventory_padding"
            android:text="@string/neighborhood_title"
            android:textColor="#aaa"
            android:textSize="@dimen/report_list_item_title"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

          <AutoCompleteTextView
              android:id="@+id/address_neighborhood"
              android:layout_width="match_parent"
              android:layout_height="@dimen/tabhost_height"
              android:lines="1"
              android:textColor="#000"
              android:textSize="@dimen/activity_vertical_margin"
              />

          <ProgressBar
              android:id="@+id/address_neighborhood_progress"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/report_card_padding_item_left"
              android:layout_marginTop="@dimen/report_card_padding_item_left"
              android:indeterminate="true"
              style="?android:attr/progressBarStyleSmall"
              />

        </RelativeLayout>

      </LinearLayout>

      <LinearLayout
          android:layout_width="@dimen/textview_empty"
          android:layout_height="match_parent"
          android:layout_weight="3"
          android:orientation="vertical"
          >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/inventory_padding"
            android:text="@string/zipcode_title"
            android:textColor="#aaa"
            android:textSize="@dimen/report_list_item_title"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

          <EditText
              android:id="@+id/address_zip_number"
              android:layout_width="match_parent"
              android:layout_height="@dimen/tabhost_height"
              android:inputType="number"
              android:lines="1"
              android:maxLength="8"
              android:maxLines="1"
              android:textColor="#000"
              android:textSize="@dimen/activity_vertical_margin"
              />

          <ProgressBar
              android:id="@+id/address_zip_number_progress"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/report_card_padding_item_left"
              android:layout_marginTop="@dimen/report_card_padding_item_left"
              android:indeterminate="true"
              style="?android:attr/progressBarStyleSmall"
              />
        </RelativeLayout>
      </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/report_card_padding_y"
        android:orientation="vertical"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/inventory_padding"
          android:text="@string/reference_address_title"
          android:textColor="@color/field_label_color"
          android:textSize="@dimen/report_list_item_title"
          />

      <EditText
          android:id="@+id/address_reference"
          android:layout_width="match_parent"
          android:layout_height="@dimen/tabhost_height"
          android:lines="1"
          android:textColor="@color/pick_map_location_text"
          android:textSize="@dimen/activity_vertical_margin"
          />
    </LinearLayout>
  </LinearLayout>

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:focusable="true"
      android:focusableInTouchMode="true"
      >

    <fragment
        android:id="@+id/pick_location_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.ntxdev.zuptecnico.ui.WebImageView
        android:id="@+id/address_marker"
        android:layout_width="@dimen/margin_map_warning"
        android:layout_height="@dimen/margin_map_warning"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/report_list_item_margin_between"
        android:layout_marginTop="@dimen/webimageview_map_padding"
        android:src="@drawable/ic_marker"
        />

    <FrameLayout
        android:id="@+id/pickmap_invalid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/pickmap_invalid_bg"
        android:visibility="gone"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginBottom="@dimen/report_card_padding_item_left"
          android:layout_marginTop="@dimen/report_card_padding_item_left"
          android:text="@string/error_address_out_of_bounds"
          android:textColor="@color/editscreen_button"
          />
    </FrameLayout>
  </FrameLayout>

</LinearLayout>